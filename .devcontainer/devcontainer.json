{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "okmr",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "okmr",
            "ROS_DISTRO": "jazzy"
        }
    },
    "workspaceFolder": "/home/okmr_auv",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/okmr_auv,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "ranch-hand-robotics.rde-ros-2"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_LOCALHOST_ONLY": "1",
        "ROS_DOMAIN_ID": "42",
        "ROS_DISTRO": "jazzy"
    },
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "-e", "DISPLAY=${env:DISPLAY}"
    ],
    "mounts": [
       "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
       "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached"
    ],
    "postCreateCommand": "sudo apt update && rosdep fix-permissions && rosdep update && sudo rosdep install --from-paths ros2_ws/src --ignore-src -y --rosdistro $ROS_DISTRO --skip-keys pcl && sudo chown -R $(whoami) /home/okmr_auv/ && echo 'source /opt/ros/jazzy/setup.bash' >> ~/.bashrc && echo 'source /opt/ros/jazzy/setup.sh' >> ~/.bashrc"
}
